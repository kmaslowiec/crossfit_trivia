<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="label_choice_style">
        <item name="android:layout_marginStart">@dimen/view_start_margin</item>
        <item name="android:layout_marginTop">@dimen/label_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/view_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/label_margin_bottom</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="my_button">
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">@dimen/rounded_button_text_size</item>,
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="circle_button">
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">@dimen/circle_button_text_size</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="radio_button">
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">@dimen/radio_button_text_size</item>,
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="label_big">
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:layout_marginStart">@dimen/view_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/view_margin_end</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">@dimen/top_bottom_padding_button</item>
        <item name="android:paddingBottom">@dimen/top_bottom_padding_button</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:textAlignment">center</item>-->
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="roundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- buttons -->
        <item name="colorAccent">@color/dialog_buttons</item>
        <!-- title and text -->
        <item name="android:textColorPrimary">@color/dialog_text</item>
        <!-- background you can change some other color than white -->
        <item name="android:background">@color/dialog_background</item>
    </style>
</resources>