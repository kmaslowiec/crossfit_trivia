<resources>
    <!-- Base application theme. -->
    <style name="Theme.CrossfitTrivia" parent="Theme.AppCompat.DayNight">

        <!-- Status bar color. -->
        <item name="colorPrimaryDark">@color/light_ocean</item>

        <!--ActionBar background-->
        <item name="colorPrimary">@color/ocean</item>

        <item name="android:textColorAlertDialogListItem">@color/black</item>

        <!--Window Background-->
        <item name="android:windowBackground">@color/very_light_ocean</item>
        <item name="colorPrimaryVariant">@color/light_ocean</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--ActionBar text color-->
        <item name="android:textColorPrimary">@color/clouds</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ocean</item>
        <item name="colorSecondaryVariant">@color/dark_ocean</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>