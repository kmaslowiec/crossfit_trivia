<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emomText"
            style="@style/label_choice_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum" />

        <!--EMOM Button-->
        <TextView
            android:id="@+id/emomButton"
            style="@style/choice_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_choice_button"
            android:text="@string/emomButton" />

        <TextView
            android:id="@+id/amrapText"
            style="@style/label_choice_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum" />

        <!--AMRAP Button-->
        <TextView
            android:id="@+id/amrapButon"
            style="@style/choice_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_choice_button"
            android:text="@string/amrapButton" />

        <TextView
            android:id="@+id/chipperText"
            style="@style/label_choice_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum" />

        <!--Chipper Button-->
        <TextView
            android:id="@+id/chipperButon"
            style="@style/choice_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_choice_button"
            android:text="@string/chipperButton" />
    </LinearLayout>
</layout>